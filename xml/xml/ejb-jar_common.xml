<?xml version="1.0" encoding="MS932"?>

<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 1.1//EN" "http://java.sun.com/j2ee/dtds/ejb-jar_1_1.dtd">
<ejb-jar>
    <display-name>commonEJB</display-name>
    <enterprise-beans>
        <session>
            <display-name>EventEJB</display-name>
            <ejb-name>EventEJB</ejb-name>
            <home>jp.co.hisas.career.common.event.EventEJBHome</home>
            <remote>jp.co.hisas.career.common.event.EventEJB</remote>
            <ejb-class>jp.co.hisas.career.common.event.EventEJBBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <resource-ref>
                <res-ref-name>jdbc/HCDB</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
            </resource-ref>
        </session>
        
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>EventEJB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
